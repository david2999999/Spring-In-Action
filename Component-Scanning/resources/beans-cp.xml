<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">


	<context:component-scan base-package="com.springinaction"></context:component-scan>

	<bean class="com.springinaction.model.SgtPeppersDisc"></bean>

	<bean id="compactDisc" class="com.springinaction.model.SgtPeppersDisc">
	</bean>

	<bean id="cdPlayer" class="com.springinaction.model.CDPlayer">
		<constructor-arg ref="compactDisc"></constructor-arg>
	</bean>
	<bean id="blankDisc" class="com.springinaction.model.BlankDisc">
		<constructor-arg index="0" value="Sgt. Pepper's Lonely Hearts Club Band"></constructor-arg>
		<constructor-arg index="1" value="The Beatles"></constructor-arg>
	</bean>
</beans>
